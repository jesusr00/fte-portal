{
  "name": "fte_portal",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "develop:backend": "yarn --cwd backend develop",
    "develop:frontend": "wait-on http://127.0.0.1:1337/ && yarn --cwd frontend develop",
    "develop": "npm-run-all -l -p develop:*",
    "lint": "yarn --cwd frontend lint && yarn --cwd backend lint",
    "postinstall": "husky install", 
    "commit": "git-cz", 
    "tsc": "yarn --cwd frontend tsc && yarn --cwd backend tsc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.2.0"
  }
}
